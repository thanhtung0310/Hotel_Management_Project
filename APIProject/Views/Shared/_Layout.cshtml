<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyForm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .dropbtn {
            border: none;
            background-color: white;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown-content a {
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            background-color: white;
            color: grey;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }


        .dropdown-content a:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyForm</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav flex-grow-1">
                        <div class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </div>
                        <div class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                        <div class="dropdown nav-item">
                            <button class="dropbtn nav-link text-dark">DB - Form</button>
                            <div class="dropdown-content">
                                <a asp-controller="Account" asp-action="Index">Account</a>
                                <a asp-controller="Customer" asp-action="Index">Customer</a>
                                <a asp-controller="Employee" asp-action="Index">Employee</a>
                                <a asp-controller="Payment" asp-action="Index">Payment</a>
                                <a asp-controller="PaymentType" asp-action="Index">Payment Type</a>
                                <a asp-controller="Reception" asp-action="Index">Reception</a>
                                <a asp-controller="Reservation" asp-action="Index">Reservation</a>
                                <a asp-controller="Role" asp-action="Index">Role</a>
                                <a asp-controller="Room" asp-action="Index">Room</a>
                                <a asp-controller="RoomStatus" asp-action="Index">Room Status</a>
                                <a asp-controller="RoomType" asp-action="Index">Room Type</a>
                            </div>
                        </div>
                        <div class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Swagger" asp-action="">Swagger</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MyForm - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
