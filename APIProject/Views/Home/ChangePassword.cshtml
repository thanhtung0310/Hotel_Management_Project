@using Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Change user's password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UserSession

<h1>Change user's password <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h1>

<h3 style="color:red;">@ViewBag.Message</h3>

@if (ViewBag.StatusCode == "Success" && Model != null)
{
<form asp-action="ChangePassword" method="post">
    <div class="form-group">
        <label for="acc_username">Username: </label>
        <input class="form-control" name="acc_username" value="@Model.acc_username" readonly />
    </div>
    <div class="form-group">
        <label for="acc_old_password">Old password: </label>
        <input type="password" class="form-control" name="acc_old_password"  placeholder="Please enter your old password"  autofocus/>
    </div>
    <div class="form-group">
        <label for="acc_new_password">New password: </label>
        <input type="password" class="form-control" name="acc_new_password" placeholder="Please enter your new password" required />
    </div>
    <div class="form-group">
        <label for="acc_new_password2">Confirm new password: </label>
        <input type="password" class="form-control" name="acc_new_password2" placeholder="Please re-enter your new password" required />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Change password</button>
    </div>
</form>
}