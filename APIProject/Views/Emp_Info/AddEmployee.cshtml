@using Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add new employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model emp_info

<h1>Add new employee <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h1>
<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="emp_id">ID:</label>
        <input class="form-control" name="emp_id" required />
    </div>
    <div class="form-group">
        <label for="emp_name">Name:</label>
        <input class="form-control" name="emp_name" required />
    </div>
    <div class="form-group">
        <label for="role_id">Role ID (6):</label>
        <input class="form-control" name="role_id" required />
    </div>
    <div class="form-group">
        <label for="emp_position">Position:</label>
        <input class="form-control" name="emp_position" required />
    </div>
    <div class="form-group">
        <label for="acc_username">Username:</label>
        <input class="form-control" name="acc_username" required />
    </div>
    <div class="form-group">
        <label for="acc_password">Password:</label>
        <input class="form-control" name="acc_password" required />
    </div>
    <div class="form-group">
        <label for="emp_dob">Date Of Birth:</label>
        <input class="form-control" name="emp_dob" required />
    </div>
    <div class="form-group">
        <label for="emp_contact_number">Contact Number:</label>
        <input class="form-control" name="emp_contact_number" required />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add employee</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Employee's information</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Employee's ID</th>
                <th>Employee's name</th>
                <th>Employee's role name</th>
                <th>Employee's account username</th>
                <th>Employee's account password</th>
                <th>Employee's date of birth</th>
                <th>Employee's contact number</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.emp_id</td>
                <td>@Model.emp_name</td>
                @{
                    string role_name;
                    if (Model.role_id == 1)
                        role_name = "Manager";
                    else if (Model.role_id == 2)
                        role_name = "Security";
                    else if (Model.role_id == 3)
                        role_name = "Cleaner";
                    else if (Model.role_id == 4)
                        role_name = "Chief";
                    else if (Model.role_id == 5)
                        role_name = "Intern";
                    else if (Model.role_id == 6)
                        role_name = "Accoutant";
                    else
                        role_name = "Fresher";
                }
                <td>@role_name</td>
                <td>@Model.emp_position</td>
                <td>@Model.acc_username</td>
                <td>@Model.acc_password</td>
                <td>@Model.emp_dob</td>
                <td>@Model.emp_contact_number</td>
            </tr>
        </tbody>
    </table>
}