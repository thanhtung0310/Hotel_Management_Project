@using Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Get employee Information by ID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model emp_info

<h1>Get employee's information by ID <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h1>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Employee</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Employee's information</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Employee's ID</th>
                <th>Employee's name</th>
                <th>Employee's role name</th>
                <th>Employee's working floor</th>
                <th>Employee's date of birth</th>
                <th>Employee's contact number</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.emp_id</td>
                <td>@Model.emp_name</td>
                @{
                    string role_name;
                    if (Model.role_id == 1)
                        role_name = "Manager";
                    else if (Model.role_id == 2)
                        role_name = "Security";
                    else if (Model.role_id == 3)
                        role_name = "Cleaner";
                    else if (Model.role_id == 4)
                        role_name = "Chief";
                    else if (Model.role_id == 5)
                        role_name = "Intern";
                    else if (Model.role_id == 6)
                        role_name = "Accountant";
                    else
                        role_name = "Not assigned";
                }
                <td>@role_name</td>
                <td>@Model.emp_position</td>
                <td>@Model.emp_dob</td>
                <td>@Model.emp_contact_number</td>
            </tr>
        </tbody>
    </table>
}