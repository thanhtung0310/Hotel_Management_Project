@model DatabaseProvider.employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Employee control panel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="emp_id" class="control-label"></label>
                <input asp-for="emp_id" class="form-control" />
                <span asp-validation-for="emp_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp_name" class="control-label"></label>
                <input asp-for="emp_name" class="form-control" />
                <span asp-validation-for="emp_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp_position" class="control-label"></label>
                <select asp-for="emp_position" class="form-control">
                    <option value="">Select working floor</option>
                    <option value="Ground Floor">Ground Floor</option>
                    <option value="Second Floor">Second Floor</option>
                    <option value="Third Floor">Third Floor</option>
                    <option value="Fourth Floor">Fourth Floor</option>
                </select>
                <span asp-validation-for="emp_position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp_dob" class="control-label"></label>
                <input type="date" asp-for="emp_dob" class="form-control" />
                <span asp-validation-for="emp_dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp_contact_number" class="control-label"></label>
                <input asp-for="emp_contact_number" class="form-control" />
                <span asp-validation-for="emp_contact_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp_identity_number" class="control-label"></label>
                <input asp-for="emp_identity_number" class="form-control" />
                <span asp-validation-for="emp_identity_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to employee list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
