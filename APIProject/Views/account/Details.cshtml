@model DatabaseProvider.account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Account control panel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.emp_id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.emp_id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.acc_username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.acc_username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.acc_password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.acc_password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.role_id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.role_id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.acc_id">Edit</a> |
    <a asp-action="Index">Back to account list</a>
</div>
