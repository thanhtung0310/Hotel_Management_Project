@model DatabaseProvider.payment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            payment_type_name
        </dt>
        <dd class="col-sm-10">
            @{
                string payment_type_name = "";
                if (Model.payment_type_id == 1)
                    payment_type_name = "By Cash";
                else if (Model.payment_type_id == 2)
                    payment_type_name = "By Credit card";
                else if (Model.payment_type_id == 3)
                    payment_type_name = "By Debit card";

            }
            @payment_type_name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.reservation_id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.reservation_id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.payment_amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.payment_amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.payment_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.payment_date)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.payment_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
