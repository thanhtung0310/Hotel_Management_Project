@using Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Booked room's information by Room type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<booked_room_info>

<h1>Booked room's information by Room type ID <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h1>
<h3>@ViewBag.StatusCode</h3>
<h3 style="color:red;">@ViewBag.Message</h3>
<form method="post">
    <div class="form-field">
        <label for="id">Room type ID:</label>
        <select name="id" id="id" class="form-control">
            <option value="1">King Room</option>
            <option value="2">Queen Room</option>
            <option value="3">4-people Family Room</option>
            <option value="4">3-people Family Room</option>
            <option value="5">Single Room</option>
            <option value="6">Couple Room</option>
            <option value="7">4-Bunk Room</option>
        </select>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Room</button>
    </div>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Room ID</th>
                <th>Room type</th>
                <th>Expected check in date</th>
                <th>Expected check out date</th>
                <th>Customer full name</th>
                <th>Customer contact number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.room_id</td>
                    <td>@item.room_type_name</td>
                    <td>@item.expected_check_in_date</td>
                    <td>@item.expected_check_out_date</td>
                    <td>@item.customer_full_name</td>
                    <td>@item.customer_contact_number</td>
                </tr>
            }
        </tbody>
    </table>
}
