@using Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add new customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model cus_info

<h1>Add new customer <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h1>
<form asp-action="AddCustomer" method="post">
    <div class="form-group">
        <label for="customer_id">ID:</label>
        <input class="form-control" name="customer_id" required />
    </div>
    <div class="form-group">
        <label for="customer_first_name">First name:</label>
        <input class="form-control" name="customer_first_name" required />
    </div>
    <div class="form-group">
        <label for="customer_last_name">Last name:</label>
        <input class="form-control" name="customer_last_name" required />
    </div>
    <div class="form-group">
        <label for="customer_address">Address:</label>
        <input class="form-control" name="customer_address" required />
    </div>
    <div class="form-group">
        <label for="customer_contact_number">Contact number:</label>
        <input class="form-control" name="customer_contact_number" required />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add customer</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Customer's information</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Customer's ID</th>
                <th>Customer's first name</th>
                <th>Customer's last name</th>
                <th>Customer's home address</th>
                <th>Customer's contact number</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.customer_id</td>
                <td>@Model.customer_first_name</td>
                <td>@Model.customer_last_name</td>
                <td>@Model.customer_address</td>
                <td>@Model.customer_contact_number</td>
            </tr>
        </tbody>
    </table>
}