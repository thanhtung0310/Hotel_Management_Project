@using Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Get customer who has booked by Contact Number";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<booked_cus_info>

<h1>Get booked customer's information by Contact Number <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h1>
<h3>@ViewBag.StatusCode</h3>
<h3 style="color:red;">@ViewBag.Message</h3>
<form method="post">
    <div class="form-group">
        <label for="num">Contact number:</label>
        <input class="form-control" name="num" placeholder="Please enter contact number" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get customer</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Customer's information</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Customer's ID</th>
                <th>Customer's first name</th>
                <th>Customer's last name</th>
                <th>Customer's address</th>
                <th>Customer's contact number</th>
                <th>Room type</th>
                <th>Customer's expected check-in date</th>
                <th>Customer's expected check-out date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.customer_id</td>
                    <td>@item.customer_first_name</td>
                    <td>@item.customer_last_name</td>
                    <td>@item.customer_address</td>
                    <td>@item.customer_contact_number</td>
                    <td>@item.room_type_name</td>
                    <td>@item.expected_check_in_date</td>
                    <td>@item.expected_check_out_date</td>
                </tr>
            }
        </tbody>
    </table>
}