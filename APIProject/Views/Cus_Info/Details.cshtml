@using Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Update customer's information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model cus_info

<h1>Update customer's information <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h1>
<form method="post">
    <div class="form-group">
        <label for="customer_id">ID:</label>
        <input class="form-control" name="customer_id" value="@Model.customer_id" readonly />
    </div>
    <div class="form-group">
        <label for="customer_first_name">First name:</label>
        <input class="form-control" name="customer_first_name" value="@Model.customer_first_name" required />
    </div>
    <div class="form-group">
        <label for="customer_last_name">Last name:</label>
        <input class="form-control" name="customer_last_name" value="@Model.customer_last_name" required />
    </div>
    <div class="form-group">
        <label for="customer_address">Address:</label>
        <input class="form-control" name="customer_address" value="@Model.customer_address" required />
    </div>
    <div class="form-group">
        <label for="customer_contact_number">Contact number:</label>
        <input class="form-control" name="customer_contact_number" value="@Model.customer_contact_number" required />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Customer's information'</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Customer's ID</th>
                <th>Customer's first name</th>
                <th>Customer's last name</th>
                <th>Customer's home address</th>
                <th>Customer's contact number</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.customer_id</td>
                <td>@Model.customer_first_name</td>
                <td>@Model.customer_last_name</td>
                <td>@Model.customer_address</td>
                <td>@Model.customer_contact_number</td>
            </tr>
        </tbody>
    </table>
}