@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Statistics</h1>
<h3>All statistic functions</h3>
<div>
    <div class="form-group">
        <h5>Get information and using times of customer </h5>
        <a asp-action="GetCustomerTraffic" class="btn btn-sm btn-primary">Get customer traffic</a>
    </div>

    <div class="form-group">
        <h5>Get number of orders between periods</h5>
        <a asp-action="GetOrderNumBetweenDates" class="btn btn-sm btn-primary">Get between 2 dates</a>
        <a asp-action="GetOrderNumInMonth" class="btn btn-sm btn-primary">Get in a month/year</a>
        <a asp-action="GetOrderNumInYear" class="btn btn-sm btn-primary">Get in a year </a>
    </div>
    <div class="form-group">
        <h5>Get total payment between periods</h5>
        <a asp-action="GetTotalPaymentBetweenDates" class="btn btn-sm btn-primary">Get between 2 dates</a>
    </div>
    

    <div class="form-group">
        <h5>Get popular room type</h5>
        <a asp-action="GetMostPopularRoomType" class="btn btn-sm btn-primary">Get most popular room type </a>
        <a asp-action="GetLeastPopularRoomType" class="btn btn-sm btn-primary">Get least popular room type </a>
    </div>

    <div class="form-group">
        <h5>Get number of rooms</h5>
        <a asp-action="GetTotalCountType" class="btn btn-sm btn-primary">Total number of room by room type </a>
        <a asp-action="GetAvailCountType" class="btn btn-sm btn-primary">Total number of available room </a>
    </div>
</div>